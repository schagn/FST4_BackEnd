                    <Label Content="Verfügbarkeit:"/>
                    <CheckBox Margin="0,0,15,0" VerticalAlignment="Center" IsChecked="{Binding Visibility}"/>
                </StackPanel>
                <Label Content="Komponente zur Verpackung hinzufügen:" Margin="0,-5,0,0" FontStyle="Oblique"/>
